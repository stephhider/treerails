



<div class="page-header">
  <h1>All Statuses</h1>
</div>
<%= link_to "Post to a new status", new_status_path, class:"btn btn-success" %>

<% @statuses.each do |status| %>

  <div class="status">
    <h2><%= status.name %>  </h2>
    <p> <%= status.content %></p>

  <div class="meta">
  <%= link_to time_ago_in_words(status.created_at) + " ago" , status %>
  
  <div class="admin">
  <%= link_to 'Edit', edit_status_path(status) %>
  <%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
    </div>
    </div>
<% end %>

<%= link_to 'New Status', new_status_path %>